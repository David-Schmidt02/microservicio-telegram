# Archivo de whitelist de usuarios
# Los user_id son permanentes para cada bot de Telegram (nunca cambian)
# El username puede cambiar, por eso identificamos siempre por user_id

users:
  # Ejemplo de usuario autorizado
  - user_id: 123456789
    username: "davidp"
    first_name: "David"
    last_name: "Pérez"
    is_allowed: true
    created_at: "2025-10-16T14:00:00"
    updated_at: "2025-10-16T14:00:00"

  # Ejemplo de usuario no autorizado
  - user_id: 987654321
    username: "maria_test"
    first_name: "María"
    last_name: null
    is_allowed: false
    created_at: "2025-10-16T14:10:00"
    updated_at: "2025-10-16T14:10:00"

# Para obtener tu user_id:
# 1. Envía un mensaje al bot
# 2. Revisa los logs, verás: "Usuario <user_id> no autorizado"
# 3. Agrega ese user_id aquí con is_allowed: true
